{
  "name": "ducktor",
  "version": "1.0.0",
  "description": "Ducktor is your friendly posture companion that helps you maintain good posture while working at your computer. Using your webcam, Ducktor monitors your posture in real-time and provides feedback when it detects issues. Our favorite duck will quack at you when it's time to straighten up! Regular breaks are important too, so Ducktor can remind you to take short breaks throughout your day.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.your-name.ducktor",
    "productName": "Ducktor",
    "mac": {
      "category": "public.app-category.healthcare-fitness",
      "icon": "assets/icon.icns",
      "target": ["dmg", "zip"]
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ]
  },
  "keywords": [
    "posture",
  "health",
  "ergonomics",
  "wellness",
  "reminder",
  "breaks",
  "duck",
  "assistant",
  "desktop-app",
  "macos",
  "electron",
  "productivity",
  "posture-correction",
  "webcam",
  "real-time",
  "alert",
  "work-health",
  "sitting-posture",
  "focus"
  ],
  "author": "Team Ducktor",
  "license": "MIT",
  "devDependencies": {
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12"
  }
}
